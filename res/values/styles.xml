<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.Settings" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@android:style/Widget.Holo.ActionBar.Solid</item>
    </style>

    <style name="RobotoTextViewThin" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="RobotoTextViewLight" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="HomescreenTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>